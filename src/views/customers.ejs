<% include partials/header %>
<script>
window.addEventListener('load',()=>{
    document.querySelector("#nombre").focus();
})
</script>

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) {%>
                    <% for(var i = 0; i< data.length ;i++){ %>
                    <tr>
                        <td>
                            <%= data[i].id %>
                        </td>
                        <td>
                            <%= data[i].nombre %>
                        </td>
                        <td>
                            <%= data[i].direccion %>
                        </td>
                        <td>
                            <%= data[i].telefono %>
                        </td>
                        <td>
                            <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                            <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                          </td>

                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <div class="card card-body">
                <form action="/add" method="post">
                    <div class="form-group">
                        <input type="text" name="nombre" id="nombre" placeholder="Ingrese nombre" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" id="direccion" placeholder="Ingrese direccion" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="telefono" id="telefono" placeholder="Ingrese su  telefono" class="form-control">
                    </div>
                    <input type="submit" value="Guardar" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
</div>




<% include partials/footer %>